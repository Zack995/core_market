{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "pretty": true,
    "declaration": true,
    "esModuleInterop": true,
    "typeRoots": ["./typings", "./node_modules/@types"],
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "plugins": [{ "transform": "ts-transform-paths" }],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["dist", "node_modules", "test", "src/scripts"]
}
